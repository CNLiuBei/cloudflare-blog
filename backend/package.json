{
  "name": "cloudflare-blog-backend",
  "version": "1.0.0",
  "description": "Cloudflare Workers backend for blog system",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:init": "wrangler d1 execute blog-db --local --file=./schema.sql",
    "db:init:remote": "wrangler d1 execute blog-db --remote --file=./schema.sql",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.0",
    "fast-check": "^3.15.0",
    "miniflare": "^3.20240129.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "wrangler": "^3.25.0"
  }
}
